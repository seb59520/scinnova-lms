{
  "type": "glossary",
  "title": "Format de glossaire générique",
  "description": "Format JSON réutilisable pour créer des glossaires avec mot, explication et exemple",
  "version": "1.0.0",
  "schema": {
    "type": "object",
    "properties": {
      "metadata": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "description": "Titre du glossaire" },
          "description": { "type": "string", "description": "Description du glossaire" },
          "category": { "type": "string", "description": "Catégorie du glossaire (ex: Python, JavaScript, HACCP)" },
          "version": { "type": "string", "description": "Version du glossaire" },
          "author": { "type": "string", "description": "Auteur du glossaire" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        },
        "required": ["title"]
      },
      "categories": {
        "type": "array",
        "description": "Catégories pour organiser les termes",
        "items": {
          "type": "object",
          "properties": {
            "id": { "type": "string", "description": "Identifiant unique de la catégorie" },
            "name": { "type": "string", "description": "Nom de la catégorie" },
            "description": { "type": "string", "description": "Description de la catégorie" }
          },
          "required": ["id", "name"]
        }
      },
      "terms": {
        "type": "array",
        "description": "Liste des termes du glossaire",
        "items": {
          "type": "object",
          "properties": {
            "id": { "type": "string", "description": "Identifiant unique du terme" },
            "word": { "type": "string", "description": "Le mot ou concept à définir" },
            "explanation": { "type": "string", "description": "Explication détaillée du terme" },
            "example": { "type": "string", "description": "Exemple d'utilisation du terme" },
            "category_id": { "type": "string", "description": "ID de la catégorie (optionnel)" },
            "tags": { "type": "array", "items": { "type": "string" }, "description": "Tags pour faciliter la recherche" },
            "related_terms": { "type": "array", "items": { "type": "string" }, "description": "IDs des termes liés" },
            "language": { "type": "string", "description": "Langue du terme (ex: python, javascript)" },
            "difficulty": { "type": "string", "enum": ["beginner", "intermediate", "advanced"], "description": "Niveau de difficulté" }
          },
          "required": ["id", "word", "explanation", "example"]
        }
      }
    },
    "required": ["metadata", "terms"]
  },
  "example": {
    "metadata": {
      "title": "Glossaire Python - Concepts de base",

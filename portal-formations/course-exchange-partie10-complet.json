                "questions": [
                  {
                    "id": "m10-q1",
                    "type": "mcq",
                    "prompt": "Exchange est surtout sensible à :",
                    "options": [
                      "Uniquement au CPU",
                      "Au disque et à la mémoire, beaucoup moins au CPU",
                      "Uniquement à la mémoire",
                      "Uniquement au disque"

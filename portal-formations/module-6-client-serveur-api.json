    {
      "type": "exercise",
      "title": "6.6 - Exercice : Analyser une réponse API",
      "position": 6,
      "published": true,
      "content": {
        "question": {
          "type": "doc",
          "content": [
            {
              "type": "paragraph",
              "content": [
                { "type": "text", "text": "Analysez cette réponse API et identifiez :" }
              ]
            },
            {
              "type": "codeBlock",
              "attrs": { "language": "http" },
              "content": [
                {
                  "type": "text",
                  "text": "HTTP/1.1 201 Created\nContent-Type: application/json\nLocation: https://api.example.com/users/42\n\n{\n  \"id\": 42,\n  \"name\": \"Alice\",\n  \"email\": \"alice@example.com\",\n  \"created_at\": \"2024-01-20T10:30:00Z\"\n}"
                }
              ]
            },
            {
              "type": "bulletList",
              "content": [
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        { "type": "text", "text": "Le code de statut HTTP et sa signification" }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        { "type": "text", "text": "Le type de contenu" }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        { "type": "text", "text": "L'en-tête Location et son rôle" }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        { "type": "text", "text": "Les données retournées" }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        "correction": {
          "type": "doc",
          "content": [
            {
              "type": "heading",
              "attrs": { "level": 3 },
              "content": [
                { "type": "text", "text": "Correction" }
              ]
            },
            {
              "type": "bulletList",
              "content": [
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        { "type": "text", "marks": [{ "type": "bold" }], "text": "Code de statut 201 Created :" },
                        { "type": "text", "text": " Indique qu'une ressource a été créée avec succès. C'est typiquement la réponse à une requête POST." }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
